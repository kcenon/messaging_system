{
  "$schema": "https://raw.githubusercontent.com/microsoft/vcpkg-tool/main/docs/vcpkg.schema.json",
  "name": "kcenon-messaging-system",
  "version": "1.0.0",
  "port-version": 0,
  "description": "Modern C++20 messaging infrastructure with pub/sub, request/reply, and event streaming patterns",
  "homepage": "https://github.com/kcenon/messaging_system",
  "license": "BSD-3-Clause",
  "supports": "!(uwp | xbox)",
  "dependencies": [
    "asio",
    "fmt",
    "nlohmann-json",
    "spdlog"
  ],
  "features": {
    "ecosystem": {
      "description": "Enable kcenon ecosystem dependencies (requires vcpkg registry registration)",
      "dependencies": [
        "kcenon-common-system",
        "kcenon-thread-system",
        "kcenon-container-system"
      ]
    },
    "network": {
      "description": "Enable network transport implementations (WebSocket, HTTP)",
      "dependencies": [
        "kcenon-network-system"
      ]
    },
    "monitoring": {
      "description": "Enable runtime monitoring integration",
      "dependencies": [
        "kcenon-monitoring-system"
      ]
    },
    "database": {
      "description": "Enable database persistence support",
      "dependencies": [
        "kcenon-database-system"
      ]
    },
    "ssl": {
      "description": "Enable SSL/TLS support for secure messaging",
      "dependencies": [
        "openssl"
      ]
    },
    "testing": {
      "description": "Build unit tests and benchmarks",
      "dependencies": [
        {
          "name": "gtest",
          "features": ["gmock"]
        },
        "benchmark"
      ]
    }
  }
}
